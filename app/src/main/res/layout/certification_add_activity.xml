<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F3F3">


    <RelativeLayout
        android:id="@+id/title_relative"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/new_theme_color">
        <!--返回键-->
        <LinearLayout
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="25dp"
                android:padding="5dp"
                android:src="@mipmap/back_whilte_left" />

        </LinearLayout>
        <!--标题-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="银行卡认证"
            android:textColor="#FFFFFF"
            android:textSize="17sp"
            android:textStyle="bold" />


    </RelativeLayout>


    <LinearLayout
        android:layout_below="@+id/title_relative"
        android:id="@+id/merchant_detail2_line2"
        android:background="@drawable/main_me_line_bg"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:textStyle="bold"
                android:id="@+id/cer_tvn1"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓名"
                android:textColor="#4C4C4C"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/cer_tvn2"
                android:textColor="#F80C0C"
                android:layout_toRightOf="@+id/cer_tvn1"
                android:layout_centerVertical="true"
                android:text="*"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <EditText
                android:layout_toLeftOf="@+id/scan_id_btn"
                android:textColor="#000000"
                android:id="@+id/cer_id_name"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingRight="12dp"
                android:gravity="center_vertical|right"
                android:layout_centerVertical="true"
                android:background="@null"
                android:textSize="12sp"
                android:hint="请输入姓名"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/cer_tvn2"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


            <ImageView
                android:id="@+id/scan_id_btn"
                android:src="@mipmap/bank_btn_iv"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="17dp"
                android:layout_height="16dp"/>


        </RelativeLayout>
        <View
            android:background="#F3F3F3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:textStyle="bold"
                android:id="@+id/cer_tvn3"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号"
                android:textColor="#4C4C4C"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/cer_tvn4"
                android:textColor="#F80C0C"
                android:layout_toRightOf="@+id/cer_tvn3"
                android:layout_centerVertical="true"
                android:text="*"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <EditText
                android:textColor="#000000"
                android:id="@+id/cer_id_num"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingRight="12dp"
                android:gravity="center_vertical|right"
                android:layout_centerVertical="true"
                android:background="@null"
                android:textSize="12sp"
                android:hint="请输入身份证号码"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/cer_tvn4"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>
        <View
            android:background="#F3F3F3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:textStyle="bold"
                android:id="@+id/cer_tv1"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行卡号"
                android:textColor="#4C4C4C"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/cer_tv2"
                android:textColor="#F80C0C"
                android:layout_toRightOf="@+id/cer_tv1"
                android:layout_centerVertical="true"
                android:text="*"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <EditText
                android:inputType="number"
                android:layout_toLeftOf="@+id/scan_bank_btn"
                android:textColor="#000000"
                android:id="@+id/cer_bank_num"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingRight="12dp"
                android:gravity="center_vertical|right"
                android:layout_centerVertical="true"
                android:background="@null"
                android:textSize="12sp"
                android:hint="请输入卡号"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/cer_tv2"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


            <ImageView
                android:id="@+id/scan_bank_btn"
                android:src="@mipmap/bank_btn_iv"
                android:layout_marginRight="16dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_width="17dp"
                android:layout_height="16dp"/>


        </RelativeLayout>
        <View
            android:background="#F3F3F3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:textStyle="bold"
                android:id="@+id/cer_tv3"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="#4C4C4C"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/cer_tv4"
                android:textColor="#F80C0C"
                android:layout_toRightOf="@+id/cer_tv3"
                android:layout_centerVertical="true"
                android:text="*"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <EditText
                android:inputType="number"
                android:textColor="#000000"
                android:id="@+id/cer_phone"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingRight="12dp"
                android:gravity="center_vertical|right"
                android:layout_centerVertical="true"
                android:background="@null"
                android:textSize="12sp"
                android:hint="请输入手机号"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/cer_tv4"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>
        <View
            android:background="#F3F3F3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:textStyle="bold"
                android:id="@+id/cer_tv5"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CVN码"
                android:textColor="#4C4C4C"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/cer_tv6"
                android:textColor="#F80C0C"
                android:layout_toRightOf="@+id/cer_tv5"
                android:layout_centerVertical="true"
                android:text="*"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <EditText
                android:inputType="number"
                android:textColor="#000000"
                android:id="@+id/cer_cvn"
                android:maxLines="1"
                android:singleLine="true"
                android:paddingRight="12dp"
                android:gravity="center_vertical|right"
                android:layout_centerVertical="true"
                android:background="@null"
                android:textSize="12sp"
                android:hint="请输入CVN码"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/cer_tv6"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </RelativeLayout>
        <View
            android:background="#F3F3F3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:layout_marginRight="15dp"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:textStyle="bold"
                android:id="@+id/cer_tv7"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有效期"
                android:textColor="#4C4C4C"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/cer_tv8"
                android:textColor="#F80C0C"
                android:layout_toRightOf="@+id/cer_tv7"
                android:layout_centerVertical="true"
                android:text="*"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


            <TextView
                android:drawableRight="@mipmap/set_up_iv4"
                android:textColor="#000000"
                android:id="@+id/cer_years"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawablePadding="11dp"
                android:gravity="center"
                android:hint="请选择有效期"
                android:textSize="12sp" />

        </RelativeLayout>


        <View
            android:background="#F3F3F3"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <RelativeLayout
            android:id="@+id/province_relative"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="15dp">

            <TextView
                android:textStyle="bold"
                android:id="@+id/cer_tv9"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="省市区"
                android:textColor="#4C4C4C"
                android:textSize="12sp"
                />
            <TextView
                android:id="@+id/cer_tv10"
                android:textColor="#F80C0C"
                android:layout_toRightOf="@+id/cer_tv9"
                android:layout_centerVertical="true"
                android:text="*"
                android:textSize="12sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/province_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:drawableRight="@mipmap/quote_activity_select_iv"
                android:drawablePadding="11dp"
                android:gravity="center"
                android:hint="请选择省市区"
                android:textColor="#000000"
                android:textSize="12sp" />


        </RelativeLayout>
    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/merchant_detail2_line2"
        android:id="@+id/title"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:text="示例"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textColor="@color/txy_red"
                android:text="有效期"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/image1"
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/yreascer" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:textColor="@color/txy_red"
                android:text="CVM码"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/image2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:scaleType="fitXY"
                android:src="@mipmap/cvn"
                android:layout_width="140dp"
                android:layout_height="100dp"/>

        </LinearLayout>


    </LinearLayout>
    <Button
        android:id="@+id/merchant_detail_submit"
        android:background="@color/new_theme_color"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:text="下一步"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>
</RelativeLayout>