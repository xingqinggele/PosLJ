<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="13dp"
    android:background="@drawable/main_me_line_bg">

    <TextView
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/me_merchants_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff747474"
        android:textSize="15sp"
        />

    <TextView
        app:layout_constraintTop_toBottomOf="@+id/me_merchants_name"
        app:layout_constraintLeft_toLeftOf="@+id/me_merchants_name"
        android:layout_marginTop="10dp"
        android:id="@+id/me_merchants_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff747474"
        android:textSize="12sp"
        />


    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toRightOf="@+id/me_merchants_name"
        fresco:placeholderImage="@mipmap/person_code_iv"
        android:id="@+id/wx_code_simple"
        app:layout_constraintTop_toTopOf="@+id/me_merchants_name"
        app:layout_constraintBottom_toBottomOf="@+id/me_merchants_name"
        android:layout_width="30dp"
        android:layout_height="30dp"

        />

    <RelativeLayout
        android:id="@+id/m_rela1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="11dp"
        app:layout_constraintTop_toBottomOf="@+id/me_merchants_number">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/b_fail_msg_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_status"
            android:drawableRight="@mipmap/blue_back"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/txy_red"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/tv_status" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/m_rela2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="11dp"
        app:layout_constraintTop_toBottomOf="@+id/m_rela1">

        <TextView
            android:id="@+id/edit_static"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/edit_fall_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/edit_static"
            android:drawableRight="@mipmap/blue_back"
            android:drawablePadding="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/txy_red"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/edit_static" />

    </RelativeLayout>

    <TextView
        android:id="@+id/me_merchants_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:textColor="#3CA0FF"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv1"
        app:layout_constraintRight_toLeftOf="@+id/tv1"
        app:layout_constraintTop_toTopOf="@+id/tv1" />

    <TextView
        app:layout_constraintBottom_toBottomOf="@+id/me_merchants_name"
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="11dp"
        android:text="元"
        android:textColor="#3CA0FF"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/me_merchants_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="本月商户交易额"
        android:textColor="#ffa0a0a0"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="@+id/tv1"
        app:layout_constraintBottom_toBottomOf="@+id/me_merchants_number"
        app:layout_constraintTop_toTopOf="@+id/me_merchants_number" />

    <View
        app:layout_constraintTop_toBottomOf="@+id/m_rela2"
        android:id="@+id/view_xian"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="13dp"
        android:background="#E4E4E4"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:gravity="right"
        android:layout_marginBottom="14dp"
        android:layout_marginTop="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/tv1"
        app:layout_constraintTop_toBottomOf="@+id/view_xian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:visibility="gone"
            android:id="@+id/certification_merchants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/item_me_merchats_tv_bg"
            android:text="认证"
            android:textColor="#3CA0FF"
            android:textSize="11sp"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/bind_merchants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/item_me_merchats_tv_bg"
            android:text="绑定"
            android:textColor="#3CA0FF"
            android:textSize="11sp"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/rate_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:background="@drawable/item_me_merchats_tv_bg"
            android:text="修改费率"
            android:textColor="#3CA0FF"
            android:textSize="11sp"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/edit_merchants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/item_me_merchats_tv_bg"
            android:text="修改"
            android:textColor="#3CA0FF"
            android:textSize="11sp"
            />

    </LinearLayout>



</android.support.constraint.ConstraintLayout>