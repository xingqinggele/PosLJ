<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background_no_padding"
    android:orientation="vertical">
    <!-- 弹窗上半部分 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_top_circle_lr"
        android:orientation="vertical"
        android:minHeight="50dp"
        android:gravity="center_vertical">

        <EditText
            android:background="@null"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:maxLines="1"
            android:id="@+id/dialog_sTime"
            android:hint="开始时间"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
        <View
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#bab6b6"
            />
        <EditText
            android:background="@null"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:hint="结束时间"
            android:id="@+id/dialog_eTime"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>

    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#bab6b6"/>
    <!---->
    <!-- 确定按钮 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_bottom_confirm_btn"
            android:gravity="center"
            android:minHeight="50dp"
            android:textColor="#2A91FF"
            android:textSize="16sp"
            android:text="确定" />
        <View
            android:id="@+id/view"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#bab6b6"
            />
        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/dialog_bottom_confirm_btn"
            android:gravity="center"
            android:minHeight="50dp"
            android:textColor="#2A91FF"
            android:textSize="16sp"
            android:text="取消" />
    </LinearLayout>

</LinearLayout>